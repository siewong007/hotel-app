{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Hotel Management",
  "version": "0.1.0",
  "identifier": "com.hotelmanagement.desktop",
  "build": {
    "beforeBuildCommand": "cd ../hotel-web-fe && rm -rf build && npm ci --legacy-peer-deps && npm run build",
    "beforeDevCommand": "cd ../hotel-web-fe && npm install --legacy-peer-deps && npm start",
    "devUrl": "http://localhost:3000",
    "frontendDist": "../../hotel-web-fe/build"
  },
  "app": {
    "windows": [
      {
        "title": "Hotel Management System",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false,
        "maximized": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://127.0.0.1:3030 http://localhost:3030 ws://127.0.0.1:3030 ws://localhost:3030; img-src 'self' data: https: blob:; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; script-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../../hotel-app-be/database/migrations/*": "migrations/"
    },
    "category": "Business",
    "shortDescription": "Hotel Management System",
    "longDescription": "A comprehensive hotel management system for reservations, guests, rooms, and billing. Features include room management, booking management, guest profiles, invoicing, night audit, and reporting.",
    "copyright": "Copyright 2024-2025 Hotel Management",
    "publisher": "Hotel Management Team",
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "signingIdentity": null,
      "exceptionDomain": null
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper",
        "silent": true
      },
      "allowDowngrades": true
    },
    "linux": {
      "deb": {
        "depends": ["libssl3", "libwebkit2gtk-4.1-0"],
        "section": "utils",
        "priority": "optional"
      }
    }
  },
  "plugins": {
    "shell": {
      "scope": []
    }
  }
}
