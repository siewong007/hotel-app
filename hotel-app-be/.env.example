# Hotel Management System - Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# ENVIRONMENT
# =============================================================================
ENVIRONMENT=production
# Options: development, staging, production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=hotel_admin
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD_MIN_16_CHARS
POSTGRES_DB=hotel_management
POSTGRES_PORT=5432

# Database Performance Tuning
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB

# Database Resource Limits
POSTGRES_CPU_LIMIT=1.0
POSTGRES_MEMORY_LIMIT=512M

# =============================================================================
# REDIS CACHE (Optional - for production)
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_REDIS_PASSWORD
REDIS_PORT=6379

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=3030
BACKEND_HOST=0.0.0.0

# Database Connection String (Required)
# Format: postgres://username:password@host:port/database
# For Docker Compose: use 'postgres' as host (service name)
# For local development: use 'localhost' as host
DATABASE_URL=postgres://hotel_admin:CHANGE_ME_TO_STRONG_PASSWORD@postgres:5432/hotel_management

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=10

# JWT Security (Required - minimum 32 characters)
JWT_SECRET=CHANGE_ME_TO_RANDOM_STRING_MIN_32_CHARACTERS_LONG_FOR_SECURITY
JWT_EXPIRATION=3600
REFRESH_TOKEN_EXPIRATION=604800

# CORS Settings (Required - comma-separated allowed origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Logging
RUST_LOG=info
RUST_BACKTRACE=0

# Backend Resource Limits
BACKEND_CPU_LIMIT=1.0
BACKEND_MEMORY_LIMIT=512M
BACKEND_REPLICAS=1

# Backend Version (for Docker image tagging)
BACKEND_VERSION=latest

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
NODE_VERSION=18

# API URLs
REACT_APP_API_URL=http://localhost:3030
REACT_APP_WS_URL=ws://localhost:3030
REACT_APP_ENVIRONMENT=production

# Frontend Version (for Docker image tagging)
FRONTEND_VERSION=latest

# =============================================================================
# NGINX REVERSE PROXY (Production)
# =============================================================================
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# MONITORING (Optional)
# =============================================================================
# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION=15d

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_ADMIN_PASSWORD
GRAFANA_PLUGINS=

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
# Cron schedule format: minute hour day month weekday
# Default: 2 AM daily
BACKUP_SCHEDULE=0 2 * * *

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
NETWORK_SUBNET=172.28.0.0/16

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Uncomment these for development mode

# ENVIRONMENT=development
# RUST_LOG=debug
# RUST_BACKTRACE=1
# CORS_ALLOWED_ORIGINS=*
# FRONTEND_PORT=3000
# BACKEND_PORT=3030
